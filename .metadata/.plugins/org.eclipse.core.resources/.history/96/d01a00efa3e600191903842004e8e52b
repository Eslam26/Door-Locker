/*------------------------------------------INCLUDES--------------------------------------------------*/

#include "uart.h"


/*------------------------------------FUNCTIONS DEFINITIONS-------------------------------------------*/

/*----------------------------------------------------------------------------------------------------
 [Function Name]:  UART_init
 [Description]  :  This function is responsible for initializing UART
 [Returns]      :  This function returns void
 ----------------------------------------------------------------------------------------------------*/

void UART_init(const Uart_configType * configType_Ptr)
{
	UCSRC = (1<<URSEL) ;
	UCSRC = (UCSRC && 0xF8) |(configType_Ptr->size && 0x07);
	UCSRC = (UCSRC && 0xBF) |((configType_Ptr->mode && 0x01)<<UMSEL);
	UCSRC = (UCSRC && 0x0b11001111) | ((configType_Ptr->parity && 0b00000011)<<UPM0);




}
