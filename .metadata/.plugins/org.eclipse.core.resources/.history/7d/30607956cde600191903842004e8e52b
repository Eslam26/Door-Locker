/*--------------------------------------INCLUDES--------------------------------------------------------*/
#include "i2c.h"
void TWI_init(const I2C_configType * configType_Ptr)
{
	TWSR = configType_Ptr->prescaler;
	TWBR = configType_Ptr->valueTWBR;
	TWAR = (TWAR & 0b00000001) | ((configType_Ptr->address & 0b11111110)<<1);
	TWCR = (1<<TWEN);
}



